extend type Query {
    ping(pongVersion: Int!): Pong!
}

extend type Mutation {
    setSquelch(val: Int!, commandId: ID!): String
}

extend type Subscription {
    onNewRadioDetails: RadioDetails!
}

type Pong {
    name: String!
}

type RadioDetails {
    radioId: String!
    settings: RadioSettings!
    data: RadioData
}

type RadioSettings {
    squelch: Int!
    stereo: Boolean!
}

type RadioData {
    signalStrength: Float!
}


